<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.MainPage">

    <StackLayout BackgroundColor="White">
        <Image Source="logo.png" HorizontalOptions="Center" VerticalOptions="Center" Margin="50,120,50,0"/>
        <Entry Keyboard="Email" x:Name="mailEntry" Placeholder="Email Adres" Margin="50"/>
        <Entry  IsPassword="True" x:Name="passwordEntry" Placeholder="Password" Margin="50,-40"/>
        <Button x:Name="loginButton" Clicked="loginButton_Clicked" BackgroundColor="Blue" Text="Login In" Margin="50,70,50,0" CornerRadius="10"/>
        <Button x:Name="forgotButton" Clicked="forgotButton_Clicked" BackgroundColor="Transparent" Text="Forgotten password?" Margin="50,12,50,0" TextColor="SkyBlue" FontAttributes="Bold" />

        <BoxView Color="Black" HeightRequest="1" Margin="50,20,50,0"></BoxView>
        <Button x:Name="registerButton" Clicked="registerButton_Clicked" BackgroundColor="Green" Text="Create new account" Margin="50,25,50,0" TextColor="SkyBlue" FontAttributes="Bold" />


    </StackLayout>

</ContentPage>
